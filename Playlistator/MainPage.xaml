<Page
    x:Class="Playlistator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Playlistator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <NavigationView Name="navigationViewMainNavigation" ExpandedModeThresholdWidth="100" IsPaneOpen="False" IsBackButtonVisible="Collapsed" IsSettingsVisible="False" PaneDisplayMode="LeftCompact">
        <NavigationView.MenuItems>
            <NavigationViewItem  Icon="Home" Content="Home"></NavigationViewItem>
            <NavigationViewItemHeader Content="Tags"></NavigationViewItemHeader>
            <NavigationViewItem Name="navigationViewItemAddTag" Content="Add"></NavigationViewItem>
            <NavigationViewItem Content="List"></NavigationViewItem>
            <NavigationViewItemHeader Content="Songs"></NavigationViewItemHeader>
            <NavigationViewItem Content="Add"></NavigationViewItem>
            <NavigationViewItem Content="List"></NavigationViewItem>
            <NavigationViewItemSeparator></NavigationViewItemSeparator>
            <NavigationViewItem Content="About app"></NavigationViewItem>
        </NavigationView.MenuItems>
        <Frame x:Name="frameMainContent"/>
    </NavigationView>

</Page>
