<Page
    x:Class="Playlistator.Pages.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Playlistator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <TextBlock FontSize="16">Page 1</TextBlock>
        <ToggleButton x:Name="toggleButton" Content="ToggleButton"/>
        <ToggleSwitch x:Name="toggleSwitch" Header="This is some custom toggle switch"/>
        <Button x:Name="button" Content="Go to Add tag page" Click="button_Click"/>
        <StackPanel Spacing="5" Orientation="Horizontal" Padding="5,5,5,5">
            <Button x:Name="buttonSelectSong" Content="Select song" Click="buttonSelectSong_Click"/>
            <TextBox x:Name="textBoxSelectedSong" Text="" TextWrapping="Wrap" Height="32" Width="400" IsReadOnly="True"/>
            <Button x:Name="buttonPlay" Content="Play" Click="buttonPlay_Click"/>
            <Button x:Name="buttonPause" Content="Pause" Click="buttonPause_Click"/>
            <Button x:Name="buttonStop" Content="Stop" Click="buttonStop_Click"/>
        </StackPanel>

    </StackPanel>

</Page>
